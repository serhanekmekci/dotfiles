#!/bin/sh

WALLPAPER_FOLDER_PATH="$HOME/.local/share/wallpapers"

SELECTED_HEIF_FILE=$1

SELECTED_HEIF_FILE_NAME=$(echo $SELECTED_HEIF_FILE | cut -d '.' -f1)

SELECTED_FORMAT="jpeg"

mkdir $WALLPAPER_FOLDER_PATH/$SELECTED_HEIF_FILE_NAME

mv $WALLPAPER_FOLDER_PATH/$SELECTED_HEIF_FILE $WALLPAPER_FOLDER_PATH/$SELECTED_HEIF_FILE_NAME

heif-convert $WALLPAPER_FOLDER_PATH/$SELECTED_HEIF_FILE_NAME/$SELECTED_HEIF_FILE $WALLPAPER_FOLDER_PATH/$SELECTED_HEIF_FILE_NAME/$SELECTED_HEIF_FILE_NAME.$SELECTED_FORMAT
